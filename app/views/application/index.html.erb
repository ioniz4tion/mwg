<%
meta title: "Home - Matt Would Go",
     description: "Welcome to Matt Would Go, the official website of the MattWouldGo foundation. This website is dedicated to preserving the legacy of Navy SEAL Matt Leathers."
%>

<section id="matt">

  <div class="col col-md-10">

    <div class="circimg">
      <div style="background-image: url(<%= @homeImage[0].image %>)"></div>
    </div>

    <%= cms_upload(@homeImage[0], :image, "Upload New Image") %>

    <h1>Matt's Story</h1>


    <div class="col col-md-10">
      <p>
        <%= bip @homeText[0], :text, :textarea %>
      </p>
    </div>

  </div>

</section>

<section id="eddie">

  <div class="col col-md-10">

    <div class="circimg">
      <div style="background-image: url(<%= @homeImage[1].image %>)"></div>
    </div>
    
    <%= cms_upload(@homeImage[1], :image, "Upload New Image") %>
  
    <h1>Eddie's Story</h1>

    <div class="col col-md-10">
      <p>
        <%= bip @homeText[1], :text, :textarea %>
      </p>
    </div>

  </div>
  
</section>

<section id="buck">

  <div class="col col-md-10">

    <%= image_tag @homeImage[2].image, id: "buck-logo" %>

    <%= cms_upload(@homeImage[2], :image, "Upload New Image") %>

    <h1>Support the Foundation</h1>

    <div class="col col-md-10">
      <p>
        <%= bip @homeText[2], :text, :textarea %>
      </p>
      <%= image_tag @homeImage[3].image, id: "knife" %>

      <%= cms_upload(@homeImage[3], :image, "Upload New Image") %>
    </div>

    <div class="col col-md-8" id="buy">

      <a href="http://www.buckknives.com/product/matt-would-go/0245MCSMWG-B/" target="_blank">Buy from Buck Knives</a>

      <span id="or">or</span>

      <span>Buy directly from Tim and Linda Leathers</span>
      <span class="contact"><%= bip @homeText[3], :text %></span>
      <span class="contact"><%= bip @homeText[4], :text %></span>

      <span id="or">or</span>

      <!-- <a href="" target="_blank">Donate to the foundation</a> -->

      <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
        <input type="hidden" name="cmd" value="_s-xclick">
        <input type="hidden" name="hosted_button_id" value="27M2VV4GRXSK4">
        <button type="submit" name="submit">Donate to the foundation</button>
        <!-- <input type="button" name="submit" value="Donate to the foundation"> -->
        <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
      </form>

    </div>

  </div>

</section>

<script>
  $(document).ready(function() {
    $('header').addClass('header')
  })
</script>